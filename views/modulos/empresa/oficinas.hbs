<!--=====================================
MODAL AGREGAR PERFIL
======================================-->
<!-- Modal -->
<div class="modal fade" id="modalAgregarOficina" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background:#336699; color:white">
                <h5 class="modal-title">Agregar Nueva Oficina</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formNewOficina">
                <div class="modal-body">

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Oficina:</label>
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-laptop-house"></i></div>
                            </div>
                            <input type="text" class="form-control" id="newOficina" placeholder="Nueva Oficina" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                    <button type="submit" id="btn-agregar-oficina" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--=====================================
MODAL EDITAR OFICINA
======================================-->
<!-- Modal -->
<div class="modal fade" id="modalEditarOficina" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background:#336699; color:white">
                <h5 class="modal-title" id="exampleModalLabel">Editar Oficina</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formEditOficina">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">ID Oficina:</label>
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-laptop-house"></i></div>
                            </div>
                            <input type="text" class="form-control" id="editIdOficina" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Oficina:</label>
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-laptop-house"></i></div>
                            </div>
                            <input type="text" class="form-control" id="editOficina" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                    <button type="submit" id="btnEditarOficina" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>